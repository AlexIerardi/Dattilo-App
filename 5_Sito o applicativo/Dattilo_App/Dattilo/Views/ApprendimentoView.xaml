<UserControl
    x:Class="Dattilo.Views.ApprendimentoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dattilo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Dattilo.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodels:ApprendimentoViewModel />
    </UserControl.DataContext>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="197*" />
            <RowDefinition Height="253*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="437*" />
            <ColumnDefinition Width="363*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Content="{Binding Path=Stampa}" />

        <StackPanel Grid.Row="0" Grid.Column="1">
            <Label HorizontalAlignment="center" Content="Numero di caratteri" />
            <controls:NumericUpDown
                HorizontalAlignment="center"
                VerticalAlignment="center"
                Value="{Binding Path=NCaratteri}" />
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label HorizontalAlignment="center" Content="inserisci testo" />
            <TextBox x:Name="tbTestoUtente" Text="{Binding Path=TestoUtente, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</UserControl>
